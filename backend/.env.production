# Production Environment Variables for Backend
# Replace all placeholder values with your actual production credentials

# Server Configuration
NODE_ENV=production
PORT=5000

# MongoDB Configuration
MONGODB_URI=your-mongodb-atlas-connection-string-here
MONGODB_URI_PROD=your-mongodb-atlas-connection-string-here

# JWT Configuration - CHANGE THESE IN PRODUCTION
JWT_SECRET=your-super-secure-jwt-secret-key-here-minimum-32-characters
JWT_EXPIRE=7d
JWT_COOKIE_EXPIRE=7

# Cloudinary Configuration (for file uploads)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Email Configuration with Brevo
BREVO_API_KEY=your-brevo-api-key-here
BREVO_SENDER=your-verified-sender-email@yourdomain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
BCRYPT_SALT_ROUNDS=12

# Frontend URL (for CORS)
FRONTEND_URL=https://your-frontend-domain.vercel.app
FRONTEND_URL_PROD=https://your-frontend-domain.vercel.app



# WebSocket Configuration
WS_PORT=5001
