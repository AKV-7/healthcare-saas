# Healthcare SaaS Frontend Environment Configuration
# Copy this file to .env.local and update the values according to your setup

# ==============================================
# API CONFIGURATION
# ==============================================

# Backend API URL
# For local development:
NEXT_PUBLIC_API_URL=http://localhost:5000

# For production:
# NEXT_PUBLIC_API_URL=https://your-backend-domain.com

# ==============================================
# ADMIN CONFIGURATION
# ==============================================

# Admin passkey for accessing admin dashboard
NEXT_PUBLIC_ADMIN_PASSKEY=111111

# Change this to a secure passkey in production:
# NEXT_PUBLIC_ADMIN_PASSKEY=your_secure_admin_passkey

# ==============================================
# CLOUDINARY CONFIGURATION (Optional)
# ==============================================

# For image uploads and management
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name

# ==============================================
# ANALYTICS CONFIGURATION (Optional)
# ==============================================

# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Google Tag Manager
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX

# ==============================================
# FEATURE FLAGS (Optional)
# ==============================================

# Enable/disable features
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_CHAT_SUPPORT=false

# ==============================================
# THIRD-PARTY INTEGRATIONS (Optional)
# ==============================================

# Payment gateway
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_key
NEXT_PUBLIC_RAZORPAY_KEY_ID=rzp_test_your_razorpay_key

# Map services
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# ==============================================
# APP CONFIGURATION
# ==============================================

# App metadata
NEXT_PUBLIC_APP_NAME=Khushi Homoeopathic Clinic
NEXT_PUBLIC_APP_DESCRIPTION=Healthcare management system for easy appointment booking
NEXT_PUBLIC_APP_URL=https://your-domain.com

# Contact information
NEXT_PUBLIC_CLINIC_PHONE=+91-XXXXXXXXXX
NEXT_PUBLIC_CLINIC_EMAIL=contact@your-clinic.com
NEXT_PUBLIC_CLINIC_ADDRESS=Your Clinic Address

# ==============================================
# DEVELOPMENT CONFIGURATION
# ==============================================

# Enable development features
NEXT_PUBLIC_ENABLE_DEBUG=false
NEXT_PUBLIC_SHOW_CONSOLE_LOGS=false

# ==============================================
# SECURITY CONFIGURATION
# ==============================================

# Content Security Policy
NEXT_PUBLIC_CSP_ENABLED=true

# ==============================================
# PERFORMANCE CONFIGURATION
# ==============================================

# Image optimization
NEXT_PUBLIC_ENABLE_IMAGE_OPTIMIZATION=true

# ==============================================
# MAINTENANCE CONFIGURATION
# ==============================================

# Maintenance mode
NEXT_PUBLIC_MAINTENANCE_MODE=false
NEXT_PUBLIC_MAINTENANCE_MESSAGE=We are currently updating our system. Please check back soon.

# ==============================================
# DEPLOYMENT CONFIGURATION
# ==============================================

# Vercel-specific configurations
VERCEL_URL=your-app.vercel.app

# Custom domain
NEXT_PUBLIC_CUSTOM_DOMAIN=your-custom-domain.com

# ==============================================
# EXAMPLE VALUES FOR QUICK SETUP
# ==============================================

# For quick local development, uncomment and use these values:
# NEXT_PUBLIC_API_URL=http://localhost:5000
# NEXT_PUBLIC_ADMIN_PASSKEY=111111
# NEXT_PUBLIC_APP_NAME=Healthcare SaaS
# NEXT_PUBLIC_ENABLE_DEBUG=true

# ==============================================
# PRODUCTION CHECKLIST
# ==============================================

# Before deploying to production, ensure:
# 1. NEXT_PUBLIC_API_URL points to your production backend
# 2. NEXT_PUBLIC_ADMIN_PASSKEY is changed from default
# 3. All third-party API keys are production keys
# 4. NEXT_PUBLIC_ENABLE_DEBUG is set to false
# 5. Analytics IDs are correctly configured
# 6. Custom domain is properly set
